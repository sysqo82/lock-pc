<Window x:Class="PCLockScreen.LockScreenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PC Locked" 
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="Manual"
        Topmost="True"
        ShowInTaskbar="False"
        Background="#CC000000"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left side: Today's Reminders -->
        <Border Grid.Column="0" 
                Background="#22FFFFFF" 
                Padding="20"
                Margin="20">
            <StackPanel>
                <TextBlock Text="Today's Reminders" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="White"
                           Margin="0,0,0,15"/>
                
                <ScrollViewer MaxHeight="600" 
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="RemindersListControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#33FFFFFF" 
                                        CornerRadius="4" 
                                        Padding="10" 
                                        Margin="0,0,0,8">
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="White"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Time}" 
                                                   FontSize="14" 
                                                   Foreground="#DDDDDD"
                                                   Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Right side: Main lock screen content -->
        <StackPanel Grid.Column="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center" 
                    Width="400">
            <!-- Lock Icon -->
            <Viewbox Width="80" Height="80" Margin="0,0,0,30">
                <Canvas Width="24" Height="24">
                    <Path Fill="White" Data="M18,8A2,2 0 0,1 20,10V20A2,2 0 0,1 18,22H6A2,2 0 0,1 4,20V10A2,2 0 0,1 6,8H15V6A3,3 0 0,0 12,3A3,3 0 0,0 9,6H7A5,5 0 0,1 12,1A5,5 0 0,1 17,6V8H18M12,17A2,2 0 0,0 14,15A2,2 0 0,0 12,13A2,2 0 0,0 10,15A2,2 0 0,0 12,17Z"/>
                </Canvas>
            </Viewbox>
            
            <!-- Title -->
            <TextBlock Text="PC is Locked" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
            
            <!-- Status Message -->
            <TextBlock x:Name="StatusMessage" 
                       Text="This PC is currently locked."
                       TextAlignment="Center"
                       FontSize="18"
                       Margin="0,0,0,30"/>
            
            <!-- Unlock Countdown (hours:minutes:seconds) -->
            <TextBlock x:Name="UnlockCountdownDisplay"
                       Text=""
                       TextAlignment="Center"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#FFDDFF55"
                       Margin="0,0,0,20"/>
            <!-- Current Time Display -->
            <TextBlock x:Name="CurrentTimeDisplay" 
                       TextAlignment="Center"
                       FontSize="48"
                       FontWeight="Bold"
                       Margin="0,0,0,40"/>
            
            <!-- Admin Unlock Panel -->
            <Border Background="#33FFFFFF" 
                    CornerRadius="5" 
                    Padding="20">
                <StackPanel>
                    <TextBlock Text="Admin Unlock" 
                               FontSize="18" 
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Enter admin password to unlock:"/>
                    <PasswordBox x:Name="AdminPasswordInput" 
                                 Margin="0,10,0,15"
                                 KeyDown="PasswordBox_KeyDown"/>
                    
                    <Button Content="Unlock" 
                            Click="Unlock_Click"
                            HorizontalAlignment="Stretch"/>
                    
                    <TextBlock x:Name="ErrorMessage" 
                               Text=""
                               Foreground="#FFFF5555"
                               Margin="0,10,0,0"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
