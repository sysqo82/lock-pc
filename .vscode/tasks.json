{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "publish",
      "type": "process",
      "command": "dotnet",
      "args": [
        "publish",
        "PCLockScreen.csproj",
        "-c",
        "Release",
        "-r",
        "win-x64",
        "--self-contained",
        "-p:PublishSingleFile=true",
        "-o",
        "installer-output/publish/win-x64"
      ],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "PCLockScreen.csproj"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    }
  ]
}